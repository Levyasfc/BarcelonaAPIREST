@model IEnumerable<BarcelonaAPIREST.DTOs.JugadorDTO>

@{
    ViewData["Title"] = "Alineación";
    Layout = "_Layout";
}


<div class="container-fluid text-center bg-success bg-opacity-100 py-4" style="min-height:70vh;">
    <h2 class="text-center mb-4" style="color:white;">Alineación del Equipo</h2>

    @*
        Delanteros
    *@

    <div class="row justify-content-center">
        <div class="col-4">
            <div id="carrusel-dc" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var jugadoresDC = Model.Where(j => j.Posicion == "DC").ToList();
                        int a = 0;
                    }
                    @foreach (var jugador in jugadoresDC)
                    {
                        <div class="carousel-item @(a == 0 ? "active" : "")">
                            <div class="card text-dark p-2 text-center player-card">
                                <div class="card-body p-1">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="position-box">
                                            <span>@jugador.Posicion</span>
                                        </div>
                                        <img src="@jugador.Foto" class="player-photo" alt="Foto de @jugador.Name" />
                                    </div>
                                    <p class="card-text text-center mb-0">@jugador.Name</p>
                                </div>
                            </div>
                        </div>
                        a++;
                    }
                </div>
                @if (jugadoresDC.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#carrusel-dc" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carrusel-dc" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </div>
    </div>

