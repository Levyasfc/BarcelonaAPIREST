@model IEnumerable<BarcelonaAPIREST.DTOs.JugadorDTO>

@{
    ViewData["Title"] = "Jugadores";
}

<h1>Jugadores</h1>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear nuevo jugador</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEquipo)
            </th>
            <th>
                Foto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEquipo)
                </td>
                <td>
                    <img src="@Url.Content(item.Foto)" alt="Foto del jugador" class="img-fluid" style="max-width: 80px;" />
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }

        <form asp-action="Crear" enctype="multipart/form-data">
            <div class="form-group">
                <label for="FotoFile">Seleccionar foto</label>
                <input type="file" class="form-control-file" id="FotoFile" name="FotoFile">
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </tbody>
</table>