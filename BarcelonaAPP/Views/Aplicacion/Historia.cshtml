@{
    ViewData["Title"] = "Historia";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Historia del Club";
}

<!-- Hero -->
<div class="card shadow-sm mb-4">
    <div class="card-body text-center">
        <h1 class="mb-2">Historia del Club</h1>
        <p class="text-muted mb-0">
            Desde 1899, pasión, identidad y fútbol total.
        </p>
    </div>
</div>

<!-- Línea de tiempo -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="mb-3">Línea de tiempo</h4>

        <ul class="timeline list-unstyled">
            <li class="timeline-item mb-4">
                <div class="d-flex align-items-center mb-2">
                    <span class="timeline-point"></span>
                    <h5 class="timeline-year mb-0 fw-bold">1899</h5>
                </div>
                <div class="timeline-content card">
                    <div class="card-body">
                        <h6 class="card-title mb-1">Fundación del club</h6>
                        <p class="mb-0">Joan Gamper y un grupo de apasionados fundan el FC Barcelona.</p>
                    </div>
                </div>
            </li>

            <li class="timeline-item mb-4">
                <div class="d-flex align-items-center mb-2">
                    <span class="timeline-point"></span>
                    <h5 class="timeline-year mb-0 fw-bold">1957</h5>
                </div>
                <div class="timeline-content card">
                    <div class="card-body">
                        <h6 class="card-title mb-1">Inauguración del Camp Nou</h6>
                        <p class="mb-0">Se abre el estadio que marcaría una era para el club y sus aficionados.</p>
                    </div>
                </div>
            </li>

            <li class="timeline-item mb-4">
                <div class="d-flex align-items-center mb-2">
                    <span class="timeline-point"></span>
                    <h5 class="timeline-year mb-0 fw-bold">2009</h5>
                </div>
                <div class="timeline-content card">
                    <div class="card-body">
                        <h6 class="card-title mb-1">Sextete histórico</h6>
                        <p class="mb-0">El Barça gana las 6 competiciones del año: un hito mundial.</p>
                    </div>
                </div>
            </li>

            <li class="timeline-item mb-0">
                <div class="d-flex align-items-center mb-2">
                    <span class="timeline-point"></span>
                    <h5 class="timeline-year mb-0 fw-bold">Actualidad</h5>
                </div>
                <div class="timeline-content card">
                    <div class="card-body">
                        <h6 class="card-title mb-1">Presente y futuro</h6>
                        <p class="mb-0">La Masia, el estilo y la ambición siguen siendo el centro del proyecto.</p>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

<!-- Métricas rápidas -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm h-100 text-center p-3">
            <h2 class="mb-0">5</h2>
            <small class="text-muted">Champions League</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100 text-center p-3">
            <h2 class="mb-0">27</h2>
            <small class="text-muted">Ligas</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100 text-center p-3">
            <h2 class="mb-0">31</h2>
            <small class="text-muted">Copas del Rey</small>
        </div>
    </div>
</div>

<!-- Galería -->
<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="mb-3">Galería</h4>
        <div class="row g-3">
            <div class="col-6 col-md-3"><img class="img-fluid rounded" src="~/Img/historia/1899.jpg" alt="1899" /></div>
            <div class="col-6 col-md-3"><img class="img-fluid rounded" src="~/Img/historia/campnou.jpg" alt="Camp Nou" /></div>
            <div class="col-6 col-md-3"><img class="img-fluid rounded" src="~/Img/historia/sextete.jpg" alt="Sextete" /></div>
            <div class="col-6 col-md-3"><img class="img-fluid rounded" src="~/Img/historia/actual.jpg" alt="Actualidad" /></div>
        </div>
    </div>
</div>
