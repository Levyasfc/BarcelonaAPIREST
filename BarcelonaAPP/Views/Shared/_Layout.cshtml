<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarcelonaApp.Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Estilo.css" />
</head>
<body class="FondoApp">

    <header class="FondoHeader">
        <div class="d-flex justify-content-center align-items-center py-2">

            
            <a asp-action="Index" asp-controller="Aplicacion" class="nav-link text-white fw-bold px-3">
                Inicio
            </a>

            
            <div class="mx-3">
                <img src="~/Img/logo.png" alt="Logo" style="height:60px;" />
            </div>

            
            <a asp-action="Crear" asp-controller="Aplicacion" class="nav-link text-white fw-bold px-3">
                Partidos
            </a>

        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>